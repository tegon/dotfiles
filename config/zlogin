# RVM
eval "$(rbenv init -)"

# NVM
export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh

# asdf
. $HOME/.asdf/asdf.sh

. $HOME/.asdf/completions/asdf.bash

# Keep shell history for erlang/elixir
export ERL_AFLAGS="-kernel shell_history enabled"

# Set editor to open ruby gems using `bundle open gem`
export EDITOR="vim"

PATH=$PATH:/usr/local/sbin

# AWS cli
export PATH=~/Library/Python/2.7/bin:$PATH

# Set default locale for VIM
export LC_ALL=en_US.UTF-8

# direnv
eval "$(direnv hook zsh)"

# Mix escripts (mostly for Twirp for now)
export PATH=$PATH:/Users/tegon/.asdf/installs/elixir/1.10.1/.mix/escripts
