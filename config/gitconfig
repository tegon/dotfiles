  excludesfile = ~/.gitignore
[merge]
  ff = false
  tool = vimdiff
  conflictstyle = diff3
[commit]
  template = ~/.gitmessage
  gpgsign = true
  verbose = true
[rerere]
  enabled = true
[rebase]
  autosquash = true
[mergetool]
  prompt = false
[help]
  autocorrect = 1
